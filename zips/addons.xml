<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="plugin.program.matthlockwiz" name="Matthlock Wizard" version="1.1" provider-name="Matthlock">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Matthlock Wizard</summary>
    <description lang="en">Matthlock Wizard. Updated to 1.2</description>
    <platform>all</platform>
  </extension>
</addon>

<addon id="repository.matthlock" name="Matthlock Repo" version="0.0.1" provider-name="matthlock">
    <extension point="xbmc.addon.repository" name="Matthlock Repo">
            <info compressed="false">https://raw.githubusercontent.com/matthlock/KodiRepo/master/zips/addons.xml</info>
            <checksum>https://raw.githubusercontent.com/matthlock/KodiRepo/master/zips/addons.xml.md5</checksum>
            <datadir zip="true">https://raw.githubusercontent.com/matthlock/KodiRepo/master/zips/</datadir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>Matthlock Repo</summary>
        <description></description>
        <disclaimer></disclaimer>
        <platform>all</platform>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.jpg</fanart>
        </assets>
    </extension>
</addon>
</addons>
